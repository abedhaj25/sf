<apex:page controller="ChecklistController" sidebar="false" standardStylesheets="false" docType="html-5.0" lightningStylesheets="true">
    <apex:slds />
    <html xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
        <head>
            <title>Shift Checklist</title>
            <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
        </head>
        <body class="slds-scope">
            <div class="slds-page-header">
                <div class="slds-page-header__row">
                    <div class="slds-page-header__col-title">
                        <div class="slds-media">
                            <div class="slds-media__figure">
                                <span class="slds-icon_container slds-icon-standard-task">
                                    <svg class="slds-icon" aria-hidden="true">
                                        <use xlink:href="{!URLFOR($Asset.SLDS, 'assets/icons/standard-sprite/svg/symbols.svg#task')}"></use>
                                    </svg>
                                </span>
                            </div>
                            <div class="slds-media__body">
                                <h1 class="slds-page-header__title slds-truncate" title="Shift Checklist">Shift Checklist</h1>
                                <p class="slds-text-body_small">Complete your shift tasks</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="slds-m-around_medium">
                <!-- Lightning Out container for LWC -->
                <apex:includeLightning />
                <div id="lightning" />
                
                <script>
                    $Lightning.use("c:checklistApp", function() {
                        $Lightning.createComponent("c:checklistComponent",
                            {},
                            "lightning",
                            function(cmp) {
                                console.log("LWC component loaded");
                            }
                        );
                    });
                </script>
            </div>
        </body>
    </html>
</apex:page>